.ipa-container {
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
}

.group-name {
  display: inline-block;
  width: 750rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}

.group-items {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.group-item {
  font-size: 60rpx;
  display: inline-block;
  width: 187.5rpx;
  height: 187.5rpx;
  text-align: center;
  line-height: 187.5rpx;
}

.group-items .active {
  background-color: #f2f2f2;
  border-radius: 10rpx 10rpx 0 0;
}

.ipa {
  display: inline-block;
  width: 70rpx;
  font-size: 60rpx;
}